<resources>
  <style name="Base.Widget.MaterialComponents.ProgressIndicator" parent="android:Widget">
    <item name="indicatorWidth">@dimen/mtrl_progress_indicator_width</item>
    <item name="inverse">false</item>
    <item name="growMode">none</item>
  </style>

  <style name="Base.Widget.MaterialComponents.ProgressIndicator.Linear">
    <item name="indicatorType">linear</item>
    <item name="linearSeamless">true</item>
  </style>
  <style name="Base.Widget.MaterialComponents.ProgressIndicator.Circular">
    <item name="indicatorType">circular</item>
    <item name="trackColor">@android:color/transparent</item>
    <item name="circularRadius">@dimen/mtrl_progress_circular_radius</item>
    <item name="circularInset">@dimen/mtrl_progress_circular_inset</item>
  </style>

  <style name="Widget.MaterialComponents.ProgressIndicator.Linear.Determinate"
      parent="Base.Widget.MaterialComponents.ProgressIndicator.Linear">
    <item name="android:indeterminate">false</item>
  </style>
  <style name="Widget.MaterialComponents.ProgressIndicator.Linear.Indeterminate"
      parent="Base.Widget.MaterialComponents.ProgressIndicator.Linear">
    <item name="android:indeterminate">true</item>
  </style>
  <style name="Widget.MaterialComponents.ProgressIndicator.Circular.Determinate"
      parent="Base.Widget.MaterialComponents.ProgressIndicator.Circular">
    <item name="android:indeterminate">false</item>
  </style>
  <style name="Widget.MaterialComponents.ProgressIndicator.Circular.Indeterminate"
      parent="Base.Widget.MaterialComponents.ProgressIndicator.Circular">
    <item name="android:indeterminate">true</item>
  </style>
</resources>
